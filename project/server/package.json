{
  "name": "server",
  "author": "CIURARU Paul",
  "main": "src/core/server",
  "typeCoverage": {
    "strict": true,
    "atLeast": 80,
    "ignoreFiles": [
      "src/*.d.ts",
      "src/types/**",
      "src/utils/errors/**"
    ]
  },
  "scripts": {
    "dev": "nodemon --exec tsx src/core/server.ts",
    "build": "tsx",
    "start": "NODE_ENV=production tsx src/core/server.ts",
    "ts-coverage-report": "typescript-coverage-report",
    "ts-coverage": "type-coverage --json-output > ts-coverage.json",
    "db:init": "node -e \"require('fs').mkdirSync('database', {recursive:true})\"",
    "db:generate": "npx @better-auth/cli generate --config ./src/lib/auth.ts",
    "db:migrate": "npx @better-auth/cli migrate --config ./src/lib/auth.ts",
    "db:setup": "npm run db:init && npm run db:generate && npm run db:migrate"
  },
  "dependencies": {
    "better-auth": "^1.4.10",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "helmet": "^8.1.0",
    "pg": "^8.17.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7",
    "tsx": "^4.20.6",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.1",
    "@types/pg": "^8.16.0",
    "better-sqlite3": "^12.6.0",
    "nodemon": "^3.1.11",
    "sqlite3": "^5.1.7",
    "type-coverage": "^2.29.7",
    "typescript": "^5.9.3",
    "typescript-coverage-report": "^1.1.1"
  }
}
