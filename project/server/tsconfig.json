{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "composite": true, 
    
    // node
    "lib": ["es2022"], 
    "module": "esnext",
    "moduleResolution": "bundler", 
    "types": ["node"],

    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "noEmit": false,
    
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}